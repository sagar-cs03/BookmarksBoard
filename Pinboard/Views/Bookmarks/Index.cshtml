@model IEnumerable<Pinboard.Models.Bookmark>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReadLater)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsStarred)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTagged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTimeCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsReadLater)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsStarred)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTagged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTimeCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookmarkID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookmarkID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookmarkID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
